<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%-5p [%c] [%X{msisdn}] %t %m%n" />
		</layout>
	</appender>
	
	<!-- <appender name="file" class="org.apache.log4j.FileAppender">
        <param name="file" value="/var/log/tomcat/sp.log" />
        <param name="append" value="false" />
        <param name="threshold" value="debug" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%c{1}] - %m%n" />
        </layout>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%-5p [%c] [%X{msisdn}] %t %m%n" />
		</layout>
    </appender> -->
    
    <appender name="rollingAppender" class="org.apache.log4j.DailyRollingFileAppender">
       <param name="File" value="/var/log/tomcat/spFeLogBack.log" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
       <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>          
       </layout>
    </appender>
    

	<logger name="org.hibernate.SQL">
		<level value="ERROR" />
	</logger>
	
	<logger name="org.springframework.web.*">
		<level value="INFO" />
	</logger>
	
	

	<logger name="org.eclipse.jetty.webapp.WebAppClassLoader">
		<level value="INFO" />
	</logger>

	<logger name="uaicontacts.controller">
		<level value="INFO" />
	</logger>

	<logger name="com.events.log.RequestLogFilter">
		<level value="INFO" />
		<appender-ref ref="rollingAppender" />
		<appender-ref ref="console" />
	</logger>
	<logger name="com.events.log.SessionListener">
		<level value="INFO" />
		<appender-ref ref="rollingAppender" />
		<appender-ref ref="console" />
	</logger>

	<!-- <logger name="org.springframework.web">
		<level value="trace" />
	</logger> -->
	
	<!-- Root Logger -->
	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="rollingAppender" />
	</root>

</log4j:configuration>
